<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{cars.id}}" method="POST">
                        <div class="form-group">
                            <input type="text"  value = "{{cars.placa}}" name="placa" class="form-control" placeholder="Placa" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{cars.tipo}}" name="tipo" class="form-control" placeholder="Tipo de vehiculo">
                        </div>
                        <div class="form-group">
                            <textarea name="description"  rows="2" class="form-control" placeholder="Description">{{cars.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>